<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:textColor="#ffffff"
        android:background="#ABA8A7"
        android:padding="8px"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/label_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_title_name"
        android:width="150px"
        android:text="@string/title_date" />

    <TextView
        android:textColor="#ffffff"
        android:background="#ABA8A7"
        android:padding="8px"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/value_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_title_name"
        android:layout_marginLeft="150dp" />

        <TextView
        android:textColor="#ffffff"
        android:background="#3B3B3A"
        android:padding="8px"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/value_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp" />

        <TextView
            android:textColor="#ffffff"
            android:background="#3B3B3A"
            android:padding="8px"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/label_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:width="150px"
            android:text="@string/title_name" />
</RelativeLayout>