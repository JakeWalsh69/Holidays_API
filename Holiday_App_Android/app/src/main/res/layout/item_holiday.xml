<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/label_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_title_id"
        android:layout_marginTop="-18dp"
        android:text="@string/title_date" />

    <TextView
        android:id="@+id/value_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/label_title_id"
        android:layout_marginLeft="200dp"
        android:layout_toRightOf="@+id/label_title_date" />

    <TextView
        android:id="@+id/label_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/label_title_id" />

    <TextView
        android:id="@+id/value_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/value_title_name"
        android:layout_alignTop="@+id/label_title_id"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="21dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/value_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/label_title_id"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="138dp"
        android:layout_toRightOf="@+id/label_title_name" />

    <TextView
        android:id="@+id/label_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_title_id"
        android:layout_marginTop="40dp"
        android:text="@string/title_name" />
</RelativeLayout>